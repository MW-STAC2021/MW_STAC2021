<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MypageFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/toolbar_icon"
            android:id="@+id/toolbar" />
        <ScrollView
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="Orientation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/my_page_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="비회원"
                        android:textColor="#000000"
                        android:textSize="24dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님 안녕하세요"
                        android:textColor="#000000"
                        android:textSize="14dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:background="@drawable/mypage_recent"
                        android:layout_marginBottom="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/clock"
                                android:layout_marginRight="10dp"/>
                            <Button
                                android:id="@+id/btnRecent"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:gravity="center_vertical"
                                android:text="최근 살펴본 정보  >"
                                android:background="#00ff0000"
                                android:stateListAnimator="@null"
                                android:textSize="14sp"
                                android:textColor="#A8A8A8"/>
                        </LinearLayout>

                        <androidx.core.widget.NestedScrollView
                            android:id="@+id/ScrollView1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="none"
                            android:fillViewport="true"
                            android:orientation="horizontal">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView"
                                android:layout_width="wrap_content"
                                android:nestedScrollingEnabled="false"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp">
                            </androidx.recyclerview.widget.RecyclerView>
                        </androidx.core.widget.NestedScrollView>
                    </LinearLayout>
                    <Button
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/mypage_btn1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="#ffffff"
                        android:background="@drawable/button_shape"
                        android:drawableLeft="@drawable/mypage_button1"
                        android:paddingLeft="20dp"
                        android:drawablePadding="27dp"
                        android:text="공지사항"
                        android:textSize="16dp"
                        android:gravity="left|center_vertical"
                        android:textColor="#000000" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#F4F4F4"></LinearLayout>
                    <Button
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/mypage_btn2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#ffffff"
                        android:background="@drawable/button_shape"
                        android:drawableLeft="@drawable/mypage_button2"
                        android:paddingLeft="20dp"
                        android:drawablePadding="27dp"
                        android:text="개인정보 처리 방침"
                        android:textSize="16dp"
                        android:gravity="left|center_vertical"
                        android:textColor="#000000" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#F4F4F4"></LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:id="@+id/mypage_btn3"
                        android:padding="20dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/mypage_button3" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="앱 버전"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:layout_marginLeft="27dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="2.0"
                            android:textColor="#A8A8A8"
                            android:textSize="14sp"
                            android:id="@+id/textVersion"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textVersionInfo"
                            android:text="최신 버전입니다."
                            android:textColor="#A8A8A8"
                            android:textSize="14sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#F4F4F4"></LinearLayout>
                    <Button
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/mypage_btn4"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#ffffff"
                        android:background="@drawable/button_shape"
                        android:drawableLeft="@drawable/mypage_button4"
                        android:paddingLeft="20dp"
                        android:drawablePadding="27dp"
                        android:text="로그아웃"
                        android:textSize="16dp"
                        android:gravity="left|center_vertical"
                        android:textColor="#000000" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#F4F4F4"></LinearLayout>
                    <Button
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/mypage_btn5"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="#ffffff"
                        android:background="@drawable/button_shape"
                        android:drawableLeft="@drawable/mypage_button5"
                        android:paddingLeft="18dp"
                        android:drawablePadding="22dp"
                        android:layout_marginTop="10dp"
                        android:text="회원탈퇴"
                        android:textSize="16dp"
                        android:gravity="left|center_vertical"
                        android:textColor="#000000" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="30dp"
                        android:background="#F4F4F4"></LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</FrameLayout>