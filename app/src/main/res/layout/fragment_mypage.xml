<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MypageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shadow">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mypage_color"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="17dp"
                android:text="마이페이지"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#717171"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="Orientation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="누구누구"
                        android:textColor="#000000"
                        android:textSize="24dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님 안녕하세요"
                        android:textColor="#000000"
                        android:textSize="14dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="159dp"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:background="@drawable/mypage_recent"
                        android:layout_marginBottom="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/clock"
                                android:layout_marginRight="10dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="최근 살펴본 정보"
                                android:textSize="14sp"
                                android:textColor="#A8A8A8"/>
                        </LinearLayout>

                        <HorizontalScrollView
                            android:id="@+id/ScrollView1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="none"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardview1"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="15dp"
                                    card:cardCornerRadius="10dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:focusable="true"
                                    android:clickable="true">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:layout_gravity="center"
                                        android:gravity="center|top">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="2.5"
                                            android:src="@drawable/thumbnail8" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:text="전구 갈아끼우는 방법"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="5dp"
                                            android:textSize="10dp"
                                            android:textColor="#000000"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardview2"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="15dp"
                                    card:cardCornerRadius="10dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:focusable="true"
                                    android:clickable="true">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:layout_gravity="center"
                                        android:gravity="center|top">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="2.5"
                                            android:src="@drawable/thumbnail1" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:text="생리대 사이즈와 종류 알아보기"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="5dp"
                                            android:textSize="10dp"
                                            android:textColor="#000000"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardview3"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="15dp"
                                    card:cardCornerRadius="10dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:focusable="true"
                                    android:clickable="true">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:layout_gravity="center"
                                        android:gravity="center|top">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="2.5"
                                            android:src="@drawable/thumbnail5" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:text="탐폰 사용 방법"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="5dp"
                                            android:textSize="10dp"
                                            android:textColor="#000000"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardview4"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="15dp"
                                    card:cardCornerRadius="10dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:focusable="true"
                                    android:clickable="true">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:layout_gravity="center"
                                        android:gravity="center|top">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="2.5"
                                            android:src="@drawable/thumbnail10" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:text="알맞은 생리대 사용법"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="5dp"
                                            android:textSize="10dp"
                                            android:textColor="#000000"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardview5"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="15dp"
                                    card:cardCornerRadius="10dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:focusable="true"
                                    android:clickable="true">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:layout_gravity="center"
                                        android:gravity="center|top">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="2.5"
                                            android:src="@drawable/thumbnail2" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:text="쓰레기 분기수거 하는 법"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="5dp"
                                            android:textSize="10dp"
                                            android:textColor="#000000"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                    <Button
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/mypage_btn1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#ffffff"
                        android:background="@drawable/button_shape"
                        android:drawableLeft="@drawable/mypage_butten1"
                        android:paddingLeft="20dp"
                        android:drawablePadding="27dp"
                        android:text="공지사항"
                        android:textSize="16dp"
                        android:gravity="left|center_vertical"
                        android:textColor="#000000" />
                    <Button
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/mypage_btn2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#ffffff"
                        android:background="@drawable/button_shape"
                        android:drawableLeft="@drawable/mypage_butten2"
                        android:paddingLeft="20dp"
                        android:drawablePadding="27dp"
                        android:text="개인정보 처리 방침"
                        android:textSize="16dp"
                        android:gravity="left|center_vertical"
                        android:textColor="#000000" />
                    <Button
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/mypage_btn3"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#ffffff"
                        android:background="@drawable/button_shape"
                        android:drawableLeft="@drawable/mypage_butten3"
                        android:paddingLeft="20dp"
                        android:drawablePadding="27dp"
                        android:text="앱 버전"
                        android:textSize="16dp"
                        android:gravity="left|center_vertical"
                        android:textColor="#000000" />
                    <Button
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/mypage_btn4"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#ffffff"
                        android:background="@drawable/button_shape"
                        android:drawableLeft="@drawable/mypage_butten4"
                        android:paddingLeft="20dp"
                        android:drawablePadding="27dp"
                        android:text="로그아웃"
                        android:textSize="16dp"
                        android:gravity="left|center_vertical"
                        android:textColor="#000000" />
                    <Button
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/mypage_btn5"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="30dp"
                        android:backgroundTint="#ffffff"
                        android:background="@drawable/button_shape"
                        android:drawableLeft="@drawable/mypage_butten5"
                        android:paddingLeft="18dp"
                        android:drawablePadding="22dp"
                        android:text="회원탈퇴"
                        android:textSize="16dp"
                        android:gravity="left|center_vertical"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>