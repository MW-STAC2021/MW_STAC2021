<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MypageFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shadow">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mypage_color"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:text="마이페이지"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#717171"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="Orientation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="누구누구"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님 안녕하세요"
                android:textColor="#000000"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="310dp"
                android:layout_height="150dp"
                android:background="#ffff00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/mypage_btn1"
                android:layout_width="310dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#ffffff"
                android:background="@drawable/butten_shape"
                android:drawableLeft="@drawable/mypage_butten1"
                android:paddingLeft="20dp"
                android:drawablePadding="25dp"
                android:text="공지사항"
                android:textSize="16dp"
                android:gravity="left|center_vertical"
                android:textColor="#000000" />
            <Button
                android:id="@+id/mypage_btn2"
                android:layout_width="310dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#ffffff"
                android:background="@drawable/butten_shape"
                android:drawableLeft="@drawable/mypage_butten2"
                android:paddingLeft="20dp"
                android:drawablePadding="25dp"
                android:text="개인정보 처리 방침"
                android:textSize="16dp"
                android:gravity="left|center_vertical"
                android:textColor="#000000" />
            <Button
                android:id="@+id/mypage_btn3"
                android:layout_width="310dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#ffffff"
                android:background="@drawable/butten_shape"
                android:drawableLeft="@drawable/mypage_butten3"
                android:paddingLeft="20dp"
                android:drawablePadding="25dp"
                android:text="앱 버전"
                android:textSize="16dp"
                android:gravity="left|center_vertical"
                android:textColor="#000000" />
            <Button
                android:id="@+id/mypage_btn4"
                android:layout_width="310dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#ffffff"
                android:background="@drawable/butten_shape"
                android:drawableLeft="@drawable/mypage_butten4"
                android:paddingLeft="20dp"
                android:drawablePadding="25dp"
                android:text="로그아웃"
                android:textSize="16dp"
                android:gravity="left|center_vertical"
                android:textColor="#000000" />
            <Button
                android:id="@+id/mypage_btn5"
                android:layout_width="310dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#ffffff"
                android:background="@drawable/butten_shape"
                android:drawableLeft="@drawable/mypage_butten5"
                android:paddingLeft="20dp"
                android:drawablePadding="25dp"
                android:text="회원탈퇴"
                android:textSize="16dp"
                android:gravity="left|center_vertical"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout></ScrollView>
</LinearLayout>
</FrameLayout>