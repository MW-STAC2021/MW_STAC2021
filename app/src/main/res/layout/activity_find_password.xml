<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/main_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="비밀번호 찾기"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="비밀번호는 이름, 가입한 아이디, 이메일을 통해 찾으실 수 있습니다."
        android:textColor="#777676"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/findPW_name"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#D0D0D0"
        android:hint="이름"
        android:paddingBottom="20dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/findPW_id"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#D0D0D0"
        android:hint="아이디"
        android:paddingBottom="20dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/findPW_email"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#D0D0D0"
        android:hint="이메일"
        android:paddingBottom="20dp"
        android:textSize="16sp" />

    <LinearLayout

        android:layout_width="304dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_button_cancel"
            android:text="취소"
            android:id="@+id/btnCancel"
            android:textColor="#777676"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/btnComplete"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_button_login"
            android:text="완료"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>