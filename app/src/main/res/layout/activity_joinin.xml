<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="16sp"
        android:textColor="#000"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/joinName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름을 적어주세요."
        android:backgroundTint="#A4A4A4"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="16sp"
        android:textColor="#000"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/joinId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디를 적어주세요."
        android:backgroundTint="#A4A4A4"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textSize="16sp"
        android:textColor="#000"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/joinEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일을 적어주세요."
        android:backgroundTint="#A4A4A4"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="16sp"
        android:textColor="#000"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/joinPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 적어주세요."
        android:backgroundTint="#A4A4A4"
        android:layout_marginTop="10dp" />
    <EditText
        android:id="@+id/joinCheckPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호 확인"
        android:backgroundTint="#A4A4A4"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_login"
        android:layout_marginTop="40dp"
        android:text="완료"
        android:id="@+id/joinBtn"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold" />
    <ProgressBar
        android:id="@+id/join_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>